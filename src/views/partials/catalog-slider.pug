.catalog
  .container
    .catalog-slider-wrapper
      .catalog-slider-wrapper__inner
        .catalog-slider.swiper-container
          .swiper-wrapper
            - for (var i=1; i<=5; i++)
              .catalog-swiper-slide.swiper-slide.borders
                .catalog-row.clearfix
                  .catalog-col.catalog-col--preview
                      .catalog-slide__img-wrapper
                        img.catalog-slide__img(src="./images/catalog-slide.jpg")
